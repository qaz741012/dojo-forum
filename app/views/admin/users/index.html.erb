<div class="pt-5 px-4">
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link" href="<%= admin_categories_path %>">Category List</a>
    </li>
    <li class="nav-item">
      <a class="nav-link active" href="<%= admin_root_path %>">User List</a>
    </li>
  </ul>
</div>

<div class="mt-3 px-4">
  <table class="table table-hover mt-3">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <%= form_for [:admin, user] do |f| %>
              <div class="form-group input-group">
                <%= f.select :role, { "Admin" => "admin", "Normal" => "normal" },
                { include_blank: false }, class: "form-control custom-select" %>
                <%= f.submit "Update", class: "btn btn-secondary ml-2" %>
              </div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="text-center" style="margin-top: 100px;">
  <%= paginate @users %>
</div>
