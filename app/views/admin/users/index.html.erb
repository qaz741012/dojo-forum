<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="2">Role</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= form_for [:admin, user] do |f| %>
            <div class="form-group">
              <%= f.select :role, { "Admin" => "admin", "Normal" => "normal" }, class: "form-control" %>
              <%= f.submit "Update", class: "btn btn-primary" %>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
