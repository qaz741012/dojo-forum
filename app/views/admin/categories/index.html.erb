<div class="pt-5 px-4">
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link active" href="<%= admin_categories_path %>">Category List</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="<%= admin_root_path %>">User List</a>
    </li>
  </ul>
</div>

<div class="my-3 px-4">
  <%= form_for [:admin, @category] do |f| %>
    <div class="form-inline">
      <%= f.text_field :name, placeholder: "Category Name", class: "form-control mr-2" %>
      <% if @category.name? %>
        <%= f.submit "Update", class: "btn" %>
      <% else %>
        <%= f.submit "Create", class: "btn" %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="mt-3 px-4">
  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>
            <%= link_to admin_categories_path(id: category.id), class: "btn btn-light" do %>
              <%= icon("far", "edit") %>
            <% end %>
            <%= link_to admin_category_path(category), method: :delete,
            data: { confirm: "Are you sure?" }, class: "btn btn-light" do %>
              <%= icon("fas", "times") %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
