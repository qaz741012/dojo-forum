<div>
  <h3>My Post</h3>
  <table class="table table-hover">
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
      </tr>
    <% end %>
  </table>
</div>

<div>
  <h3>My Comment</h3>
  <% @replies.each do |reply| %>
    <%= link_to reply.post.title, post_path(reply.post) %>
    <p><%= reply.comment %></p>
    <%= link_to edit_post_reply_path(reply.post, reply), class: "btn btn-light" do %>
      <%= icon("far", "edit") %>
    <% end %>
    <%= link_to post_reply_path(reply.post, reply), method: :delete,
    class: "btn btn-light", data: { confirm: "Are you sure?" } do %>
      <%= icon("fas", "times") %>
    <% end %>
    <hr>
  <% end %>
</div>

<div>
  <h3>My Collect</h3>
</div>

<div>
  <h3>My Draft</h3>
  <table class="table table-hover">
    <% @drafts.each do |draft| %>
      <tr>
        <td><%= link_to draft.title, post_path(draft) %></td>
        <td><%= draft.created_at.strftime("%Y-%m-%d") %></td>
      </tr>
    <% end %>
  </table>
</div>

