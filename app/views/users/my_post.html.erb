<%= render partial: "shared/user_profile", locals: { user: @user } %>

<div class="user-profile-post px-5">
  <table class="table table-hover">
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to edit_post_path(post), class: "btn btn-light" do %>
            <%= icon("far", "edit") %>
          <% end %>
          <%= link_to post_path(post), method: :delete, class: "btn btn-light",
          data: { confirm: "Are you sure?" } do %>
            <%= icon("fas", "times") %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<div class="px-5 mt-4">
  <%= link_to "New Post", new_post_path, class: "btn btn-secondary" %>
</div>
