<div class="user-profile-post px-5">
  <table class="table table-hover">
    <% if posts %>
      <% posts.each do |post| %>
        <tr>
          <td>
            <%= link_to post_path(post), class: "link-style" do %>
              <h5><%= post.title %></h5>
            <% end %>
          </td>
          <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
          <td>
            <% if current_user == @user %>
              <%= link_to edit_post_path(post), class: "btn btn-light" do %>
                <%= icon("far", "edit") %>
              <% end %>
            <% end %>
            <% if current_user == @user || current_user.admin? %>
              <%= link_to post_path(post), method: :delete, class: "btn btn-light",
              data: { confirm: "Are you sure?" } do %>
                <%= icon("fas", "times") %>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>
