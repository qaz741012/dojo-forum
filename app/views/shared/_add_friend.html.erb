<% case current_user.friend_status(user) %>
<% when "unconfirm" %>
  <%= link_to "Add Friend", add_friend_user_path(user), method: :post,
   class: "btn btn-secondary" %>
<% when "request" %>
  <%= link_to "Cancel Request...", cancel_request_user_path(user), method: :post,
   class: "btn btn-secondary" %>
<% when "confirm" %>
  <%= link_to "Friend", add_friend_user_path(user), method: :post,
   class: "btn btn-secondary" %>
<% end %>
