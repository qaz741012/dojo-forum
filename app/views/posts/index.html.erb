<ul class="nav nav-pills category-navs">
  <li class="nav-item">
    <a class="nav-link <%= "active" if !@category %>" href="<%= root_path %>">All</a>
  </li>
  <% @categories.each do |category| %>
    <li class="nav-item">
      <%= link_to category.name, root_path(category_id: category.id),
      class: "nav-link #{'active' if @category == category}" %>
    </li>
  <% end %>
</ul>

<table class="table table-hover table-sm mt-3">
  <thead class="thead-light">
    <tr>
      <th>Replies count</th>
      <th>Title</th>
      <th>Last replied at</th>
      <th>Viewed count</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.replies_count %></td>
        <td><%= link_to post.title, post_path(post) %></td>
        <td>...</td>
        <td><%= post.viewed_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center" style="margin-top: 100px;">
  <%= paginate @posts, window: 2 %>
</div>
